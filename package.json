{
  "name": "gropius-vsc",
  "displayName": "Gropius VS Code Extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showWebview",
        "title": "Show My Webview"
      },
      {
        "command": "projectsView.refresh",
        "title": "Refresh Projects"
      },
      {
        "command": "extension.openProject",
        "title": "Open Project"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "projectsView",
          "name": "Projects"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "webpack": "webpack"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vue/compiler-sfc": "^3.5.13",
    "css-loader": "^7.1.2",
    "eslint": "^9.13.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vue": "^3.5.13",
    "vue-loader": "^17.4.2",
    "vue-tsc": "^2.1.10",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}
