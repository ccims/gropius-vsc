{
  "name": "gropius-vsc",
  "displayName": "Gropius VS Code Extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "gropiusComponentVersions",
          "name": "Gropius Component Versions",
          "icon": "resources/icons/gropius-component-verison-icon.png"
        },
        {
          "type": "webview",
          "id": "componentIssues",
          "name": "Component Issues",
          "icon": "resources/icons/gropius-component-verison-icon.png"
        },
        {
          "type": "webview",
          "id": "issueDetails",
          "name": "Issue Details",
          "icon": "resources/icons/gropius-component-verison-icon.png"
        },
        {
          "type": "webview",
          "id": "graphs",
          "name": "Graphs",
          "icon": "resources/icons/gropius-component-verison-icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "gropius.refreshComponentVersions",
        "title": "Refresh Component Versions",
        "icon": "$(refresh)"
      },
      {
        "command": "extension.showComponentIssues",
        "title": "Show Component Issues"
      },
      {
        "command": "extension.showIssueDetails",
        "title": "Show Issue Details"
      },
      {
        "command": "extension.showGraph",
        "title": "Show Graph"
      },
      {
        "command": "extension.rebuildVue",
        "title": "Rebuild Vue Bundles"
      },
      {
        "command": "extension.createArtefactTemplate",
        "title": "Gropius: Create Artifact Template"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run build:vue",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "webpack": "webpack",
    "build:vue": "webpack --config webpack.config.js",
    "build:all": "npm run compile && npm run build:vue"
  },
  "devDependencies": {
    "@types/inversify": "^2.0.32",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vue/compiler-sfc": "^3.5.13",
    "css-loader": "^7.1.2",
    "eslint": "^9.13.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "vue": "^3.5.13",
    "vue-loader": "^17.4.2",
    "vue-tsc": "^2.1.10",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@apollo/client": "^3.12.7",
    "@gropius/graph-editor": "^0.0.3",
    "cytoscape": "^3.31.0",
    "graphql": "^16.10.0",
    "gropius-vsc": "file:",
    "inversify": "^6.2.1",
    "js-yaml": "^4.1.0",
    "marked": "^15.0.7",
    "node-fetch": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "sprotty": "^1.4.0",
    "sprotty-protocol": "^1.4.0",
    "uuid": "^11.0.5"
  }
}
